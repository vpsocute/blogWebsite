<%- include('partials/header.ejs') %>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">

            <label for="title">Title</label>
            <textarea name="title" type="text" placeholder="What's the Title" rows="1" cols="150"
            class="form-control"></textarea>

            <label for="publishMessage">Post</label>
            <textarea name="publishMessage" type="text" placeholder="What's on your Mind" rows="6" cols="150" class="form-control"></textarea>
            
        </div>
        <button class="btn btn-primary" type="submit">Publish</button>
    </form>
    <%- include('partials/footer.ejs') %>